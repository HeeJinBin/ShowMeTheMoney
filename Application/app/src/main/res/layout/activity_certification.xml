<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="암호 6자리를 입력해주세요."
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:id="@+id/tv_pw_top_first"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/btn_pw_layout_first"
        android:layout_marginBottom="70dp"
        android:layout_below="@id/tv_pw_top_first">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btn_pw_1_first"
            android:src="@drawable/password"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#00ff0000"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btn_pw_2_first"
            android:src="@drawable/password"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#00ff0000"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btn_pw_3_first"
            android:src="@drawable/password"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#00ff0000"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btn_pw_4_first"
            android:src="@drawable/password"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#00ff0000"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btn_pw_5_first"
            android:src="@drawable/password"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#00ff0000"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/btn_pw_6_first"
            android:src="@drawable/password"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#00ff0000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/button_layout"
        android:layout_below="@id/btn_pw_layout_first">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_1_first"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/button_1_icon"
                android:src="@drawable/button_1"/>

            <View
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_2_first"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/button_2_icon"
                android:src="@drawable/button_2"/>

            <View
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_3_first"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/button_3_icon"
                android:src="@drawable/button_3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
