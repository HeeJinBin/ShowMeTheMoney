            android:orientation="horizontal">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_4_first"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/button_4_icon"
                android:src="@drawable/button_4"/>

            <View
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_5_first"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/button_5_icon"
                android:src="@drawable/button_5"/>

            <View
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_6_first"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/button_6_icon"
                android:src="@drawable/button_6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_7_first"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/button_7_icon"
                android:src="@drawable/button_7"/>

            <View
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_8_first"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/button_8_icon"
                android:src="@drawable/button_8"/>

            <View
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_9_first"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/button_9_icon"
                android:src="@drawable/button_9"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_x_first"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/button_x_icon"
                android:src="@drawable/button_x"/>

            <View
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_0_first"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/button_0_icon"
                android:src="@drawable/button_0"/>

            <View
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_cancel_first"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/button_cancel_icon"
                android:src="@drawable/button_cancel"/>

        </LinearLayout>

    </LinearLayout>

